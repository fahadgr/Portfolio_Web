@page "/Email"

@rendermode InteractiveAuto
@using Fahad_Portfolio.Client.Data
@using Fahad_Portfolio.Client.Service
@inject E_Service E_Service;


<!-- Contact Start -->
<div class="container-xxl pb-5" id="contact">
    <div class="container py-5">
        <div class="row g-5 mb-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="col-lg-6">
                <h1 class="display-5 mb-0">Let's Work Together</h1>
            </div>
            @* <div class="col-lg-6 text-lg-end">
            <a class="btn btn-primary py-3 px-5" href="">Say Hello</a>
            </div> *@
        </div>
        <div class="row g-5">
            <div class="col-lg-5 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <p class="mb-2">Projects:</p>
                <h3 class="fw-bold">15 Projects completed in 6 years</h3>
                <hr class="w-100">
                <p class="mb-2">whatsapp me:</p>
                <h3 class="fw-bold">+92 300 9400997</h3>
                <hr class="w-100">
                <p class="mb-2">Mail me:</p>
                <h3 class="fw-bold">fahadgr9@gmail.com</h3>
                <hr class="w-100">
                <p class="mb-2">Follow me:</p>

                <div class="d-flex pt-2">
                    @* <a class="btn btn-square btn-primary me-2" href=""><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-square btn-primary me-2" href=""><i class="fab fa-facebook-f"></i></a> *@
                    <a class="btn btn-square btn-primary me-2" href="https://github.com/fahadgr"><i class="fab fa-github"></i></a>
                    <a class="btn btn-square btn-primary me-2" href="https://www.linkedin.com/in/muhammad-fahad-98043a133/"><i class="fab fa-linkedin-in"></i></a>
                </div>


            </div>
            <div class="col-lg-7 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <p class="mb-4">You can contact me by any method via email or phone that I have provided.</p>
                <form>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" @bind=CObj.Name id="name" placeholder="Your Name">
                                <label for="name">Your Name</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control" @bind=CObj.Email id="email" placeholder="Your Email">
                                <label for="email">Your Email</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" @bind=CObj.Subject id="subject" placeholder="Subject">
                                <label for="subject">Subject</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control" @bind=CObj.Message placeholder="Leave a message here" id="message" style="height: 100px"></textarea>
                                <label for="message">Message</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary py-3 px-5" type="button" @onclick="(()=> SendEmail())">Send Message</button>
                            <h5 class="text-success mt-3">@ReturnMessage</h5>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
@code {
    ContactUs CObj = new ContactUs();
    public string ReturnMessage { get; set; } = string.Empty;

    public async Task SendEmail()
    {
        ReturnMessage = "Sending...";
        ReturnMessage = await Task.Run(() => E_Service.SendEmail(CObj));
        CObj = new ContactUs();
        ReturnMessage = string.Empty;
    }
}
